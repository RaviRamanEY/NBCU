<mvc:View 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	controllerName="com.nbcu.controller.LoginPage"
	xmlns:html="http://www.w3.org/1999/xhtml">
	
	<App id="app2">
		<pages>
			<Page title="Login Page" showHeader="true" id="page1">
				<customHeader>
					<Bar>
						<contentMiddle>			
							<Image src="images/nbcu.png"></Image>
						</contentMiddle>
					</Bar>
				</customHeader>	
				<content>
					<VBox class="sapUiSmallMargin">
						<f:SimpleForm id="SimpleFormChange"
							minWidth="1024"
							maxContainerCols="2"
							editable="true"
							layout="ResponsiveGridLayout"
							title="Login to NBCU Now !"
							labelSpanL="3"
							labelSpanM="3"
							emptySpanL="4"
							emptySpanM="4"
							columnsL="1"
							columnsM="1"
							class="editableForm">
							
							<Input id="input" value="" placeholder="Enter your SSO ID"></Input>		
							<Input id="password" value="" type="Password" placeholder="Enter your password"></Input>
							<Link text="Forgot your Password?" href="https://sso.inbcu.com/nbcucentral/app/reset.jsp" />
						</f:SimpleForm>
					</VBox>
					<Toolbar>   
						<CheckBox></CheckBox>
						<Label text="Remember my Id"></Label>
						<ToolbarSpacer/>
						<Button icon="sap-icon://begin" type="Emphasized" text="Sign In" press="submit" max-width="40%" />			
					</Toolbar>
					<Panel expandable="true" title="Links" expanded="false" width="65%" class="sapUiResponsiveMargin">
						<headerToolbar>
							<Toolbar>
								<Title text="Links" />					
							</Toolbar>
						</headerToolbar>
						<content>
							<l:VerticalLayout class="sapUiSmallMargin" >
								<Link text="Need Help?" href="https://sso.inbcu.com/nbcucentral/app/faq.jsp"></Link>
							</l:VerticalLayout>
						</content>
					</Panel>
				</content>
		 		<footer>
		 			<Toolbar>
		 				<l:VerticalLayout>
 							<Label text="2016 Copyright NBCUniversal" />
		 					<Link text="Contact Us" href=""></Link>
		 				</l:VerticalLayout>
		 			</Toolbar>
				</footer>  
			</Page>
		</pages>
	</App>
</mvc:View>