<mvc:View 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	controllerName="com.nbcu.controller.LoginPage" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	
	<App id="app2">
		<pages>
			<Page title="Login Page" showHeader="true" id="loginPage">
				<customHeader>
					<Bar>
						<contentMiddle>
							<!-- To be replaced with new image file -->
							<Image src="images/nbcu.png"></Image>
						</contentMiddle>
					</Bar>
				</customHeader>	
				<content>
					<VBox class="sapUiSmallMargin">
						<f:SimpleForm id="SimpleFormChange"
							minWidth="1024"
							maxContainerCols="2"
							editable="true"
							layout="ResponsiveGridLayout"
							title=""
							labelSpanL="3"
							labelSpanM="3"
							emptySpanL="4"
							emptySpanM="4"
							columnsL="1"
							columnsM="1"
							class="editableForm">
						
							<Input id="input" value="" placeholder="Enter your SSO ID"></Input>		
							<Input id="password" value="" type="Password" placeholder="Enter your password" submit="submit"/>
							<Link text="Forgot your Password?" href="https://sso.inbcu.com/nbcucentral/app/reset.jsp" target="_blank"/>
						</f:SimpleForm>
					</VBox>
					<Toolbar>   
						<CheckBox id="checkRemember" select="onRememberMe" selected="{= ${/remember} === true}"></CheckBox>
						<Label text="Remember my Id"></Label>
						<ToolbarSpacer/>
						<Button icon="sap-icon://begin" type="Emphasized" text="Sign In" press="submit" max-width="40%" class="sapUiSmallMarginEnd"/>			
					</Toolbar>
					<Panel expandable="true" title="Links" expanded="false" width="65%" class="sapUiResponsiveMargin">
						<headerToolbar>
							<Toolbar>
								<Title text="Links" />			
							</Toolbar>
						</headerToolbar>
						<content>
								<l:VerticalLayout>
									<Link text="Need Help?" href="https://sso.inbcu.com/nbcucentral/app/faq.jsp" target="_blank"/>
								</l:VerticalLayout>
						</content>
					</Panel>
				</content>
			 	<footer>
		 			<Toolbar height="30%" class="footer">
		 				<l:VerticalLayout width="100%">
 							<Label text="NBCUniversal" class="nbcuHome sapUiSmallMarginBegin sapUiSmallMarginBottom sapUiSmallMarginTop" />
 							
 							<l:Grid class="sapUiSmallMarginTop sapUiSmallMarginBegin"
							defaultSpan="L12 M12 S12" 
							emptySpanL="0"
							emptySpanM="0"
							emptySpanS="0"
							hSpacing="0.5"
						 	columnsL="3"
						 	columnsM="3"
						 	minContainerCols="3"
						 	columnsS="3">		
							
							<Link class="linkHome" text="CONTACT US" href="http://www.nbcuniversal.com/contact-us" target="_blank">
								<layoutData>
		  					    	<l:GridData span="L4 M4 S4"/>
		   					 	</layoutData>
		   					 </Link>								

 							<Link class="linkHome" text="STORE" href="http://www.nbcuniversalstore.com/" target="_blank">
								<layoutData>
		  					    	<l:GridData span="L2 M2 S2"/>
		   					 	</layoutData>	 							
 							</Link>
			 				<Link class="linkHome" text="PRIVACY POLICY" href="http://www.nbcuniversal.com/privacy" target="_blank">
								<layoutData>
		  					    	<l:GridData span="L5 M5 S5"/>
		   					 	</layoutData>
			 				</Link>
			 				<Link class="linkHome" text="TERMS OF SERVICE" href="http://www.nbcuniversal.com/terms" target="_blank">
								<layoutData>
		  					    	<l:GridData span="L6 M6 S6"/>
		   					 	</layoutData>
			 				</Link>
						</l:Grid>
			 				<Text text="2016 Copyright NBCUniversal" id="copyrightLabel" class="copyrightLabel sapUiSmallMarginBegin sapUiSmallMarginTop" />
			 			</l:VerticalLayout>
		 			</Toolbar>
				</footer>
			</Page>
			<Page title="Search Page" id="searchPage">		
				<customHeader>
					<Bar>
						<contentMiddle>			
							<Image src="images/nbcu.png" />
						</contentMiddle>
					</Bar>
				</customHeader>
				<content>	
					<Text width="20%"></Text>
					<f:SimpleForm id="SimpleFormChange354" 
						layout="ResponsiveGridLayout"			
						minWidth="1024"
						maxContainerCols="2"
						editable="true"			
						title=""
						labelSpanL="2"
						labelSpanM="2"		
						emptySpanL="0"
						emptySpanM="0"
						columnsL="2"
						columnsM="2"
						class="editableForm">
						
						<l:Grid class="sapUiSmallMarginTop"
							defaultSpan="L12 M12 S12" 
							emptySpanL="0"
							emptySpanM="0"
							emptySpanS="0"
							hSpacing="0.5"
						 	columnsL="3"
						 	columnsM="3"
						 	minContainerCols="3"
						 	columnsS="3">		
							
							<Input id="searchField" width="100%" placeholder="Enter search criteria" submit="onSearch">
								<layoutData>
		  					    	<l:GridData span="L12 M12 S12"/>
		   					 	</layoutData>
							</Input>
							<Button icon="sap-icon://search" text="Search" press="onSearch">
								<layoutData>
		    				  		<l:GridData span="L4 M4 S4"/>
		   					 	</layoutData>
							</Button>
							<Button icon="sap-icon://decline" text="Clear Search Results" press="resetSearch">
								<layoutData>
		    				  		<l:GridData span="L7 M7 S7"/>
		    					</layoutData>
							</Button>
						</l:Grid>
					</f:SimpleForm>
					<Button icon="sap-icon://filter" text="Filters" press="onNavigateFilter" class="sapUiSmallMarginBegin filterButton" type="Transparent"></Button>
					<List id="searchResult"
						visible="false"
						items="{/results}"
						headerText="Employee Details"
						growing="true"
						growingThreshold="10"
						noDataText="No search result found."
						class="sapUiTinyMarginBottom">
						
						<items>
							<CustomListItem class="results">
								<HBox>
									<Image height="5rem" width="5rem" src="{empPic}" class="sapUiSmallMarginBegin sapUiSmallMarginTop" />
									<VBox>
										<Label text="{path: 'firstname'} {path: 'lastname'}" class="sapUiSmallMarginBegin sapUiSmallMarginTop lblName" design="Bold"/>
										<Label text="{designation}" class="sapUiSmallMarginBegin lblDesignation" />
										<Label text="{path: 'businesssegment'} {path: 'subbusinesssegment'}" class="sapUiSmallMarginBegin lblBusiness" />
										<Label text="{workcity}" class="sapUiSmallMarginBegin sapUiSmallMarginBottom lblCity" />
									</VBox>
								</HBox>
							</CustomListItem>
						</items>
					</List>
				</content>
			</Page>
			<Page id="filterPage" showHeader="true">
				<customHeader>
					<Toolbar>
						<ToolbarSpacer />
						<Text text="Filters" />
						<ToolbarSpacer />
					</Toolbar>
				</customHeader>
				<content>
					<Label text="Group" design="Bold" class="sapUiLargeMarginTop sapUiSmallMarginBegin filterLabelHeading" />
					<l:Grid
						defaultSpan="L12 M12 S12" 
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						hSpacing="1"
					 	columnsL="2"
					 	columnsM="2"
					 	minContainerCols="2"
					 	columnsS="2">
						
						<ComboBox width="100%"
							id="groupsCB"
							selectionChange="onItemSelect"
							items="{
								path: '/groups'
							}">
							
							<core:Item key="{group}" text="{group}" />	
							<layoutData>
	  					    	<l:GridData span="L10 M10 S10"/>
	   					 	</layoutData>
						</ComboBox>			
						<Button icon="sap-icon://clear-filter" width="20%" press="resetGroup" >
							<layoutData>
	    				  		<l:GridData span="L2 M2 S2"/>
	    					</layoutData>
						</Button>			
					</l:Grid>
					<Label text="Business" design="Bold" class="sapUiSmallMarginBegin filterLabelHeading" />
					<l:Grid
						defaultSpan="L12 M12 S12"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						vSpacing="0"
						hSpacing="1"
					 	columnsL="2"
					 	columnsM="2"
					 	minContainerCols="2"
					 	columnsS="2">
						
						<ComboBox width="100%" id="businessListItem" enabled="false"
								items="{
								path:'/'
							}">
							
							<core:Item text="{business}" key="{business}" />	
							<layoutData>
	  					    	<l:GridData span="L10 M10 S10"/>
	   					 	</layoutData>
						</ComboBox>			
						<Button icon="sap-icon://clear-filter" width="20%" press="resetBusiness">
							<layoutData>
	    				  		<l:GridData span="L2 M2 S2"/>
	    					</layoutData>
						</Button>			
					</l:Grid>
					<Label text="Location" design="Bold" textAlign="center" class="sapUiSmallMarginBegin sapUiSmallMarginTop filterLabelHeading" />
					<l:Grid
						defaultSpan="L12 M12 S12" 
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						hSpacing="1"
						columnsL="2"
						columnsM="2"
						minContainerCols="2"
						columnsS="2">
						
						<ComboBox width="100%" id="cmbBox"
						items="{
							path:'/locations'
						}">
							
							<core:Item text="{location}" key="{key}" />	
							<layoutData>
	  					    	<l:GridData span="L10 M10 S10"/>
	   					 	</layoutData>
						</ComboBox>			
						<Button icon="sap-icon://clear-filter"  press="resetLoc" width="20%" >
							<layoutData>
	    						<l:GridData span="L2 M2 S2"/>
	    					</layoutData>
						</Button>			
					</l:Grid>
					<Toolbar>
						<ToolbarSpacer />
						<Button text="Cancel" press="cancel" width="50%" type="Reject" class="sapUiSmallMargin" />
						<Button text="Apply" press="updateResults" width="50%" type="Emphasized" class="sapUiSmallMargin" />
						<ToolbarSpacer />
					</Toolbar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>