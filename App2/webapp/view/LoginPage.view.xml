	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	controllerName="com.nbcu.controller.LoginPage" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	
	<App id="app2">
		<pages>
			<Page title="Login Page" showHeader="true" id="loginPage" class="page" >
				<customHeader class="header">
					<Toolbar class="header">
						<content>
							<ToolbarSpacer />
							<!-- To be replaced with new image file -->
							<Image src="images/NBCU_Logo.svg" height="70%" width="50%" />
							<ToolbarSpacer />
						</content>
					</Toolbar>
				</customHeader>
				<subHeader>
					<Toolbar class="appTitle">
						<content>
							<ToolbarSpacer />
							<Title text="{i18n>titleEmplDirSearch}" />
							<ToolbarSpacer />
						</content>
					</Toolbar>
				</subHeader>
				<content>
					<VBox class="sapUiSmallMarginTop sapUiSmallMarginBegin sapUiSmallMarginEnd">
 							<l:Grid class="sapUiSmallMarginTop"
							width="100%"
							defaultSpan="L3 M6 S12"
							position="Center"
							hSpacing="0.5"
							vSpacing="0.5"
						 	minContainerCols="1"
						 	columnsS="1">
							
							<Input id="input" value="" placeholder="{i18n>inpSSO}">
								<layoutData>
		  					    	<l:GridData span="L12 M12 S12"/>
		   					 	</layoutData>
		   					 </Input>

 							<Input id="password" value="" type="Password" placeholder="{i18n>inpPwd}" submit="submit">
								<layoutData>
		  					    	<l:GridData span="L12 M12 S12"/>
		   					 	</layoutData>
 							</Input>
 							
			 				<Link text="{i18n>lnkForgotPwd}" href="https://sso.inbcu.com/nbcucentral/app/reset.jsp" target="_blank">
								<layoutData>
		  					    	<l:GridData span="L12 M12 S12"/>
		   					 	</layoutData>
			 				</Link>
						</l:Grid>
					</VBox>
					<Toolbar class="sapUiTinyMarginBegin sapUiTinyMarginEnd toolbar">
						<CheckBox id="checkRemember" select="onRememberMe" selected="{= ${/remember} === true}" />
						<Label text="{i18n>lblRemember}" />
						<ToolbarSpacer />
						<Button icon="sap-icon://begin" type="Emphasized" text="{i18n>btnSignIn}" press="submit" max-width="40%" class="sapUiSmallMarginEnd" />
					</Toolbar>
					<Panel expandable="true"  expanded="false" width="65%" class="sapUiResponsiveMargin">
						<headerToolbar>
							<Toolbar>
								<Title text="{i18n>titleLinks}" />
							</Toolbar>
						</headerToolbar>
						<content>
								<l:VerticalLayout>
										<Link text="{i18n>lnkHelp}" href="https://sso.inbcu.com/nbcucentral/app/faq.jsp" target="_blank"/>
								</l:VerticalLayout>
						</content>
					</Panel>
				</content>
