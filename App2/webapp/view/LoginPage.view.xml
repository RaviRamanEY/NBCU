		 			</Toolbar>
				</footer>-->
			</Page>
			<Page id="searchPage" class="searchPage">		
				<customHeader>
					<Toolbar class="header">
						<content>
							<ToolbarSpacer />
							<!-- To be replaced with new image file -->
							<Image src="images/NBCU_Logo.svg" height="70%" width="50%" />
							<ToolbarSpacer />
						</content>
					</Toolbar>
				</customHeader>
				<content>	
					<Text width="20%"></Text>
					<f:SimpleForm id="SimpleFormChange354" 
						layout="ResponsiveGridLayout"			
						minWidth="1024"
						maxContainerCols="2"
						editable="true"			
						title=""
						labelSpanL="2"
						labelSpanM="2"		
						emptySpanL="0"
						emptySpanM="0"
						columnsL="2"
						columnsM="2"
						class="editableForm">
						
						<l:Grid class="sapUiSmallMarginTop sapUiNoContentPadding"
							defaultSpan="L12 M12 S12" 
							emptySpanL="0"
							emptySpanM="0"
							emptySpanS="0"
							hSpacing="0.5"
						 	columnsL="3"
						 	columnsM="3"
						 	minContainerCols="3"
						 	columnsS="3">		
							
							<Input id="searchField" width="100%" placeholder="{i18n>inpEmpName}" submit="onSearch" class="srch">
								<layoutData>
		  					    	<l:GridData span="L12 M12 S12"/>
		   					 	</layoutData>
							</Input>
							<Button icon="sap-icon://search" text="{i18n>btnSearch}" press="onSearch">
								<layoutData>
		    				  		<l:GridData span="L4 M4 S4"/>
		   					 	</layoutData>
							</Button>
						<!--	<Button icon="sap-icon://decline" text="Clear Search Results" press="resetSearch" visible="false" id="clearResult">
								<layoutData>
		    				  		<l:GridData span="L7 M7 S7"/>
		    					</layoutData>
							</Button>-->
						</l:Grid>
					</f:SimpleForm>
						
					<List id="searchResult"
						visible="false"
						items="{/response/docs}"
						growing="true"
						growingThreshold="10"
						mode="SingleSelectMaster"
						noDataText="{i18n>noDataText}"
						growingTriggerText="{i18n>growingText}"
			
						selectionChange="profileSelected"
						class="sapUiTinyMarginBottom"
						updateFinished="dataLoaded">
						<headerToolbar>
							<Toolbar>
								<Title text="{i18n>titleResults}" level="H3" class="resultTitle" />
								<ToolbarSpacer />
								<core:Icon id="btnFilter" 
									visible="false" 
									src="sap-icon://filter" 
									press="onNavigateFilter"
									color="Neutral"
									size="2rem"
									class="sapUiSmallMarginBegin sapUiSmallMarginEnd filterButton" />
							</Toolbar>
						</headerToolbar>
						<items>
							<CustomListItem class="results">
								<HBox>
									<Image height="5rem" width="5rem" src="/photo/images/person/temp/{path: 'id'}.jpg" class="sapUiSmallMarginBegin sapUiSmallMarginTop empPic" error ="imageLoad"/>
									<!-- <Image height="5rem" width="5rem" src="images/Lou1.png" class="sapUiSmallMarginBegin sapUiSmallMarginTop" /> -->
									<VBox>
										<Label text="{path: 'firstname'} {path: 'lastname'}" class="sapUiSmallMarginBegin sapUiSmallMarginTop lblName" design="Bold"/>
										<Label text="{designation}" class="sapUiSmallMarginBegin lblDesignation" />
										<Label text="{path: 'businesssegment'}" class="sapUiSmallMarginBegin lblBusiness" />
										<Label text="{path: 'subbusinesssegment'}" class="sapUiSmallMarginBegin lblSubBusiness" />
										<Label text="{workcity}" class="sapUiSmallMarginBegin sapUiSmallMarginBottom lblCity" />
									</VBox>
								</HBox>
							</CustomListItem>
						</items>
					</List>
					<core:Icon size="2rem" id="btnGoToTop" visible="false" class="floatingButton" src="sap-icon://back-to-top" press="goToTop" />
				</content>
			</Page>
			<Page id="filterPage" showHeader="true" class="page">
				<customHeader  >
					<Toolbar class="headerResult">
						<content>
							<ToolbarSpacer />
							<!-- To be replaced with new image file -->
							<Image src="images/NBCU_Logo.svg" height="70%" width="50%" />
							<ToolbarSpacer />
						</content>
					</Toolbar>
				</customHeader>
					<subHeader >
						<Bar class="headerResult">
						<contentLeft>
							<Text text="{i18n>txtSearchingfor}" id="searchId"></Text>
						</contentLeft>
						</Bar>
					</subHeader>
		
				<content>
					<VBox height="4%">
						
				</VBox>
					<Toolbar class="toolbar">
							<Bar class="toolbar bkBtn">
					<contentLeft>
						<Button text="{i18n>btnBack}" icon="sap-icon://nav-back" press="cancel" class="bkBtn"></Button>
					</contentLeft>
						<contentMiddle >			
								<Label text ="{i18n>lblFilter}" design="Bold" class="toolbar"></Label>
						</contentMiddle>
					</Bar>
					
				</Toolbar>
		
					<Label text="{i18n>lblGroup}" design="Bold" class="sapUiLargeMarginTop sapUiSmallMarginBegin filterLabelHeading" />
					<l:Grid
						defaultSpan="L12 M12 S12"
						hSpacing="1">
						
						<ComboBox width="100%"
							id="groupsCB"
							selectionChange="onItemSelect"
							items="{
								path: '/'
							}">
							
							<core:Item key="{tid}" text="{name}" />	
							<layoutData>
	  					    	<l:GridData span="L11 M11 S10"/>
	   					 	</layoutData>
						</ComboBox>			
						<Button icon="sap-icon://clear-filter" width="20%" press="resetGroup" >
							<layoutData>
	    				  		<l:GridData span="L1 M1 S2"/>
	    					</layoutData>
						</Button>			
					</l:Grid>
					<Label text="{i18n>lblBusiness}" design="Bold" class="sapUiSmallMarginBegin filterLabelHeading" />
					<l:Grid
						defaultSpan="L12 M12 S12"
						vSpacing="0"
						hSpacing="1">
						
						<ComboBox width="100%" id="businessListItem" enabled="false"
								items="{
								path:'/'
							}">
							
							<core:Item text="{name}" key="{tid}" />	
							<layoutData>
	  					    	<l:GridData span="L11 M11 S10"/>
	   					 	</layoutData>
						</ComboBox>			
						<Button icon="sap-icon://clear-filter" width="20%" press="resetBusiness">
							<layoutData>
	    				  		<l:GridData span="L1 M1 S2"/>
	    					</layoutData>
						</Button>			
					</l:Grid>
					<Label text="{i18n>lblLocation}" design="Bold" class="sapUiSmallMarginBegin sapUiSmallMarginTop filterLabelHeading" />
					<l:Grid
						defaultSpan="L12 M12 S12" 
						hSpacing="1">
						
						<ComboBox width="100%" id="cmbBox"
							items="{
								path:'/data'
							}">
							
							<core:Item text="{name}" key="{tid}" />	
							<layoutData>
	  					    	<l:GridData span="L11 M11 S10"/>
	   					 	</layoutData>
						</ComboBox>			
						<Button icon="sap-icon://clear-filter"  press="resetLoc" width="20%" >
							<layoutData>
	    						<l:GridData span="L1 M1 S2"/>
	    					</layoutData>
						</Button>			
					</l:Grid>
					<Toolbar class="toolbar">
						<ToolbarSpacer />
					<!--	<Button text="Cancel" press="cancel" width="50%" type="Reject" class="sapUiSmallMargin" />-->
						<Button text="{i18n>btnApply}" press="updateResults" width="50%" type="Emphasized" class="sapUiSmallMargin " />
						<ToolbarSpacer />
					</Toolbar>
				</content>
			</Page>
			<Page id="profilePage" class="profileContent">
				<customHeader>
					<Toolbar>
						<content>
							<ToolbarSpacer />
							<Image src="images/NBCU_Logo.svg" height="70%" width="50%" />
							<ToolbarSpacer />
						</content>
					</Toolbar>
				</customHeader>
				<content>
					<VBox class="sapUiLargeMarginTop">
						<Toolbar height="7rem">
							<ToolbarSpacer />
								<Image height="7rem" width="7rem" src="/photo/images/person/temp/{path: '/id'}.jpg" class="empPic" error ="imageLoad"/>
							<ToolbarSpacer />
						</Toolbar>
						<Toolbar height="auto">
							<ToolbarSpacer />
								<VBox>
									<Text text="{path: '/designation'}, {path: '/businesssegment'}" class="sapUiSmallMarginTop sapUiSmallMarginBegin sapUiSmallMarginEnd profileDesignation"/>
									<Text text="{path: '/workcity'}" class="sapUiSmallMarginTop profileWorkCity"/>
								</VBox>
							<ToolbarSpacer />
						</Toolbar>
						<Toolbar>
							<ToolbarSpacer />
								<Button text="OK" press="profileOK"/>
							<ToolbarSpacer />
						</Toolbar>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>