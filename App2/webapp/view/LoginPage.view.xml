		 			<Toolbar height="30%" class="footer">
		 				<l:VerticalLayout width="100%">
 							<Label text="NBCUniversal" class="nbcuHome sapUiSmallMarginBegin sapUiSmallMarginBottom sapUiSmallMarginTop" />
 							
